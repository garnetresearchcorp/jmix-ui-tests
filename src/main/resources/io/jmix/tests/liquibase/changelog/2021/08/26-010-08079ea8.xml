            <column name="GRADE" type="VARCHAR(255)"/>
            <column name="USER_ID" type="UUID"/>
            <column name="PICTURE" type="VARCHAR(255)"/>
            <column name="PICTURE_SEC" type="VARCHAR(255)"/>
            <column name="ADDRESS_STREET" type="VARCHAR(255)"/>
            <column name="ADDRESS_CITY" type="VARCHAR(255)"/>
            <column name="ADDRESS_COUNTRY" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="jmixuitests" context="base">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="PERSON_ADVANCED_MAPPING"
                                 constraintName="FK_PERSONADVANCEDMAPPI_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>

        <createIndex indexName="IDX_PERSONADVANCEDMAPPING" tableName="PERSON_ADVANCED_MAPPING">
